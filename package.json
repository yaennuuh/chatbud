{
  "name": "chatbud",
  "version": "0.0.1",
  "author": "Yannick",
  "description": "ChatBud - Your Chatbot buddy",
  "main": "./dist/app.js",
  "scripts": {
    "test": "mocha -r ts-node/register test/**/*.ts",
    "watch": "tsc --watch && copyfiles -f \"src/ui/*.*\" \"dist/ui\"",
    "start": "npm run compile && electron-forge start",
    "build-start": "npm run compile-build && electron-forge start",
    "efstart": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "compile": "tsc && npm-run-all -s copy-core-config copy-core-connectors copy-core-plugins scss copy-html copy-css copy-js copy-bootstrap-js",
    "compile-watch": "tsc --watch && npm-run-all -s copy-core-config copy-core-connectors copy-core-plugins scss copy-html copy-css copy-js copy-bootstrap-js",
    "compile-build": "npm-run-all -s compile obfuscate",
    "obfuscate": "javascript-obfuscator dist --output dist --config obfuscator-config.json --exclude \"main.js\",\"app.js\",\"ui/js/bootstrap.bundle.min.js\"",
    "scss-watch": "node-sass -w src/ui/scss -o src/ui/css",
    "scss": "node-sass src/ui/scss -o src/ui/css",
    "copy-html": "copyfiles -u 1 \"src/**/*.html\" \"dist\"",
    "copy-css": "copyfiles -u 1 \"src/ui/css/**/*.css\" \"dist\"",
    "copy-js": "copyfiles -u 1 \"src/ui/js/**/*.js\" \"dist\"",
    "copy-bootstrap-js": "copyfiles -f \"node_modules/bootstrap/dist/js/bootstrap.bundle.min.js\" \"dist/ui/js\"",
    "copy-core-connectors": "copyfiles -e \"src/connectors/**/*.ts\" -u 2 \"src/connectors/**/*\" \"dist/connectors\"",
    "copy-core-plugins": "copyfiles -e \"src/plugins/**/*.ts\" -u 2 \"src/plugins/**/*\" \"dist/plugins\"",
    "copy-core-config": "copyfiles -f \"src/core/configuration.yaml\" \"dist/core\"",
    "dist": "electron-builder",
    "build": "npm run compile-build",
    "buildapp": "npm-run-all -s build dist"
  },
  "keywords": [],
  "license": "ISC",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "@types/chai": "4.2.11",
    "@types/lodash": "^4.14.166",
    "@types/mocha": "7.0.2",
    "@types/nedb": "^1.8.11",
    "@types/node": "14.0.11",
    "chai": "^4.2.0",
    "copyfiles": "^2.4.1",
    "electron": "^11.1.1",
    "electron-builder": "^22.9.1",
    "electron-squirrel-startup": "^1.0.0",
    "javascript-obfuscator": "^2.10.1",
    "mocha": "^8.2.1",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@tsed/logger": "^5.5.4",
    "axios": "^0.21.1",
    "bootstrap": "^5.0.0-beta1",
    "bootstrap-icons": "^1.2.2",
    "glob": "^7.1.6",
    "jquery": "^3.5.1",
    "jwt-decode": "^3.1.2",
    "keytar": "^7.3.0",
    "lodash": "^4.17.20",
    "moment": "^2.29.1",
    "nedb": "^1.8.0",
    "nedb-promises": "^4.1.1",
    "rxjs": "^6.6.3",
    "tmi.js": "^1.7.1",
    "twitch-auth": "^4.3.8",
    "twitch-chat-client": "^4.3.8",
    "twitch-electron-auth-provider": "^4.3.8",
    "twitch-pubsub-client": "^4.3.8",
    "xmlhttprequest": "^1.8.0",
    "yaml": "^1.10.0",
    "twitch": "^4.3.8"
  },
  "config": {
    "forge": "./forge.config.json"
  },
  "build": {
    "appId": "stream.chatbud.streambot",
    "productName": "ChatBud Streambot",
    "target": "NSIS",
    "directories": {
      "buildResources": "dist",
      "output": "build"
    },
    "files": [
      "./dist/connectors/**/*",
      "./dist/core/**/*",
      "./dist/plugins/**/*",
      "./dist/ui/**/*",
      "./dist/*.js"
    ],
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false
    },
    "asar": true
  }
}
